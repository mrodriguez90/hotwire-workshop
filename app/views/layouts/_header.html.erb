    <%= inline_svg_tag('icons/bm-logo.svg') %>
  </a>
  <div class="w-1/2">
    <form action="/products" class='text-center' method="GET" data-turbo-frame="product_list">
      <input type="text" name="q" id="search-input" class="w-3/4 rounded pt-4 px-2" placeholder="Search...">
    </form>
  </div>
   <a href=<%= shopping_cart_path %> class="text-white border rounded lg:py-3 lg:px-6 px-2">
